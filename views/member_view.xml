<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_member_tree" model="ir.ui.view">
        <field name="name">indoor.member.tree</field>
        <field name="model">indoor.member</field>
        <field name="arch" type="xml">
            <tree decoration-success="member_type == 'Basic' " 
                    decoration-muted="member_type == 'Silver' " 
                    decoration-danger="member_type == 'Gold' ">
                <field name="name" string="Member Name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="website"/>
                <field name="occupation"/>
                <field name="language"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="member_type"/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_member_form" model="ir.ui.view">
        <field name="name">indoor.member.form</field>
        <field name="model">indoor.member</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="validate_phone" string="Validate Phone" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"></field>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="dob"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Personal Information">
                            <group>
                                <group>
                                    <field name="age"/>
                                    <field name="address"/>
                                </group>
                                <group>
                                    <field name="website"/>
                                    <field name="occupation"/>
                                    <field name="language"/>   
                                </group>
                            </group>
                        </page>
                        <page name="Membership Information">
                            <group>
                                <field name="member_type"/>
                                <field name="membership_end_time"/>
                                <field name="membership_status"/>
                            </group>
                        </page>
                        <page name="Health Information">
                            <group>
                                <group string="Genaral Measurement">
                                    <field name="height"/>
                                    <field name="weight"/>
                                    <field name="bmi"/>
                                    <field name="bmr"/>
                                </group>
                                <group string="Injury Information">
                                    <field name="injury_point"/>
                                    <field name="injury_type"/>
                                    <field name="injury_level"/>
                                </group>
                                <group string="Detail Information">
                                    <field name="neck"/>
                                    <field name="chest"/>
                                    <field name="right_arm"/>
                                    <field name="left_arm"/>
                                    <field name="waist"/>
                                    <field name="hips"/>
                                    <field name="right_thigh"/>
                                    <field name="left_thigh"/>
                                    <field name="right_calf"/>
                                    <field name="left_calf"/>
                                </group>

                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_indoor_member_kanban" model="ir.ui.view">
        <field name="name">indoor.member.kanban</field>
        <field name="model">indoor.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" string="Member Name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="website"/>
                <field name="occupation"/>
                <field name="language"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="member_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong><field name="name"/></strong>
                                    <strong><field name="email"/></strong>
                                    <strong><field name="phone"/></strong>
                                </div>
                                <div class="col-6">
                                    <span class="float-end"><field name="member_type"/></span>
                                    <span class="float-end"><field name="gender"/></span>
                                    <span class="float-end"><field name="dob"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


