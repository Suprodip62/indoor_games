<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_member_tree" model="ir.ui.view">
        <field name="name">indoor.member.tree</field>
        <field name="model">indoor.member</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Member Name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="website"/>
                <field name="occupation"/>
                <field name="language"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="member_type"/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_member_form" model="ir.ui.view">
        <field name="name">indoor.member.form</field>
        <field name="model">indoor.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"></field>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="website"/>
                            <field name="occupation"/>
                        </group>
                        <group>
                            <field name="language"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="dob"/>
                        </group>
                        <group>
                            <field name="member_type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


