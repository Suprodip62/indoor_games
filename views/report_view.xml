<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_report_tree" model="ir.ui.view">
        <field name="name">indoor.report.tree</field>
        <field name="model">indoor.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_report_form" model="ir.ui.view">
        <field name="name">indoor.report.form</field>
        <field name="model">indoor.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="member_id"/>
                            <field name="game_id"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                        
                    </group>
                </sheet>
                <footer>
                    <button name="action_search" string="Print with Object" type="object" class="oe_highlight"/>
                    <button name="action_search_with_data" string="Print with Data" type="object" class="oe_highlight"/>
                    <button name="action_search_2" string="Print with Object 2" type="object" class="oe_highlight"/>
                    <button name="action_search_with_data_2" string="Print with Data 2" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


