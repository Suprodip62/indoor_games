<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_transaction_tree" model="ir.ui.view">
        <field name="name">indoor.transaction.tree</field>
        <field name="model">indoor.transaction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="transaction_id"/>
                <field name="event_id"/>
                <field name="member_name" string="Event Master"/>
                <field name="event_game"/>
                <field name="event_game_id"/>
                <field name="event_start_time"/>
                <field name="event_duration"/>
                <field name="event_end_time"/>
                <!-- <field name="event_players" widget="many2many_tags"/> -->
                <field name="bill" optional="hide"/>
                <field name="payment_method"/>
                <field name="payment_status" optional="hide"/>
                <field name="paid_amount"/>
                <!-- <field name="due_amount"/> -->
            </tree>
        </field>
    </record>

    <record id="view_indoor_transaction_form" model="ir.ui.view">
        <field name="name">indoor.transaction.form</field>
        <field name="model">indoor.transaction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="transaction_id"/>
                            <field name="event_id"/>
                            <field name="member_name"/>
                        </group>
                        <group>
                            <!-- <field name="event_game"/>
                            <field name="event_game_id"/>
                            <field name="event_start_time"/>
                            <field name="event_duration"/>
                            <field name="event_end_time"/> -->
                        </group>
                        <group>
                            <field name="subtotal"/>
                            <field name="discount"/>
                            <field name="participation_discount"/>
                            <field name="tax"/>
                            <field name="bill"/>
                            <field name="payment_method"/>
                            <field name="payment_status"/>
                            <field name="paid_amount"/>
                            <!-- <field name="due_amount"/> -->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm Payment" class="oe_highlight" special="save"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


