<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_event_tree" model="ir.ui.view">
        <field name="name">indoor.event.tree</field>
        <field name="model">indoor.event</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'confirm' " 
                    decoration-info="state == 'draft' " 
                    decoration-danger="state == 'cancel' ">
                <field name="member_name" string="Event Master" widget="many2one_avatar"/>
                <field name="event_game"/>
                <field name="event_game_id"/>
                <field name="event_start_time"/>
                <field name="event_duration"/>
                <field name="event_end_time"/>
                <!-- <field name="event_players" widget="many2many_tags"/> -->
                <field name="bill" optional="hide"/>
                <!-- <field name="payment_method"/> -->
                <!-- <field name="payment_status" optional="hide"/> -->
                <field name="state" widget="badge" decoration-success="state == 'confirm' " 
                                                    decoration-info="state == 'draft' "
                                                    decoration-danger="state == 'cancel' "/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_event_form" model="ir.ui.view">
        <field name="name">indoor.event.form</field>
        <field name="model">indoor.event</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirm" states="draft,cancel" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="button_cancel" states="draft" string="Cancel" type="object" class="oe_highlight"/>
                    <button name="button_report" string="Report" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button name="button_smart" type="object" class="oe_stat_button" icon="fa-car">
                            <span>Payment</span>
                            <field name="bill"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="member_name" widget="many2one_avatar"/>
                            <field name="event_players" widget="many2many_tags"/>
                            <field name="currency_id" invisible="1"/>
                            <!-- <field name="delay_hour"/> -->
                        </group>
                        <group>
                            <field name="event_game"/>
                            <field name="event_start_time"/>
                            <field name="event_duration" context="{'con_ev' : event_end_time}"/>
                            <field name="event_game_id"/>
                            <field name="event_end_time"/>
                        </group>
                        <group>
                            <field name="subtotal"/>
                            <field name="discount"/>
                            <!-- <field name="delay_charge"/> -->
                            <field name="participation_discount"/>
                            <field name="tax"/>
                            <field name="bill"/>
                            <!-- <field name="payment_method"/> -->
                            <!-- <field name="payment_status"/> -->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" class="oe_highlight" special="save"/>
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


