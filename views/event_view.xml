<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_event_tree" model="ir.ui.view">
        <field name="name">indoor.event.tree</field>
        <field name="model">indoor.event</field>
        <field name="arch" type="xml">
            <tree>
                <field name="member_name" string="Event Name"/>
                <field name="event_game"/>
                <field name="event_start_time"/>
                <field name="event_duration"/>
                <field name="bill"/>
                <field name="payment_status"/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_member_form" model="ir.ui.view">
        <field name="name">indoor.event.form</field>
        <field name="model">indoor.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="member_name"/>
                            <field name="event_players" widget="many2many_tags"/>
                            <!-- <field name="delay_hour"/> -->
                        </group>
                        <group>
                            <field name="event_game"/>
                            <field name="event_start_time"/>
                            <field name="event_duration"/>
                        </group>
                        <group>
                            <field name="subtotal"/>
                            <field name="discount"/>
                            <!-- <field name="delay_charge"/> -->
                            <field name="tax"/>
                            <field name="bill"/>
                            <field name="payment_status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


