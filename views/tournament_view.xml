    <record id="view_indoor_tournament_kanban" model="ir.ui.view">
        <field name="name">indoor.tournament.kanban</field>
        <field name="model">indoor.tournament</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="member_name"/>
                <field name="tournament_start_time"/>
                <field name="tournament_duration"/>
                <field name="tournament_end_time"/>
                <field name="curr_time"/>
                <field name="tournament_status"/>
                <field name="tournament_img"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image_fill_left d-block oe_kanban_avatar">
                                <field name="tournament_img" widget="image"/>
                            </div>
                            <div class="ribbon ribbon-top-right" attrs="{'invisible': [('tournament_status', '!=', 'Running')]}">
                                <span class="bg-success">Running</span>
                            </div>
                            <div class="ribbon ribbon-top-right" attrs="{'invisible': [('tournament_status', '!=', 'Ended')]}">
                                <span class="bg-secondary text-dark">Ended</span>
                            </div>
                            <div class="ribbon ribbon-top-right" attrs="{'invisible': [('tournament_status', '!=', 'Comming Up')]}">
                                <span class="bg-info">Comming Up</span>
                            </div>
                            <div class="oe_kanban_details d-flex flex-column justify-content-between">
                                    <div>
                                        <strong class="o_kanban_record_title oe_partner_heading">Master: <field name="member_name"/></strong>
                                        <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                        <ul>
                                            <li t-if="record.tournament_start_time.raw_value"><strong> Start Time: </strong> <field name="tournament_start_time"/></li>
                                            <li t-if="record.tournament_duration.raw_value"><strong> Duration: </strong> <field name="tournament_duration"/></li>
                                            <li t-if="record.tournament_end_time.raw_value"><strong> End Time: </strong> <field name="tournament_end_time"/></li>
                                            <li t-if="record.curr_time.raw_value"><field name="curr_time" invisible="1"/></li>
                                        </ul>
                                    </div>
                                </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <record id="action_indoor_tournament" model="ir.actions.act_window">
        <field name="name">Tournaments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">indoor.tournament</field>
        <!-- <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field> -->
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Tournament details
            </p>
        </field>
    </record>


    <menuitem id="menu_indoor_tournament" name="Tournaments" action="action_indoor_tournament" parent="menu_indoor_root" sequence="4"/>

</odoo>
