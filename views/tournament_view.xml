<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_tournament_tree" model="ir.ui.view">
        <field name="name">indoor.tournament.tree</field>
        <field name="model">indoor.tournament</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'confirm' " 
                    decoration-info="state == 'draft' " 
                    decoration-danger="state == 'cancel' ">
                <field name="member_name" string="Event Master"/>
                <field name="tournament_start_time"/>
                <field name="tournament_duration"/>
                <field name="tournament_end_time"/>

                <field name="state" widget="badge" decoration-success="state == 'confirm' " 
                                                    decoration-info="state == 'draft' "
                                                    decoration-danger="state == 'cancel' "/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_tournament_form" model="ir.ui.view">
        <field name="name">indoor.tournament.form</field>
        <field name="model">indoor.tournament</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_confirm" states="draft" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="button_draft" states="cancel" string="Reset to Draft" type="object" class="oe_highlight"/>
                    <button name="button_make_payment" states="confirm" string="Make Payment" type="object" class="oe_highlight"/>
                    <button name="button_cancel" states="draft,confirm" string="Cancel" type="object" class="oe_highlight"/>
                    <!-- <field name="state" widget="statusbar" options="{'clickable':'1'}"/> -->
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button name="button_smart_paid" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <!-- <span >transactions</span> -->
                            <field name="tournament_transaction_cnt"  widget="statinfo" string="transactions"/>
                            <!-- <span >Paid</span>
                            <field name="tournament_paid_amount"/> -->
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="member_name"/>
                            <field name = "member_email"/>
                            <field name="member_type"/>
                            <field name="membership_status"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="tournament_start_time"/>
                            <field name="tournament_duration"/>
                            <field name="tournament_end_time"/>
                        </group>
                    </group>
                     <notebook>
                        <!-- <page string="Events">
                            <field name="record_line_ids"/>
                        </page> -->
                        <page string="Events II">
                            <field name="record_line_ids">
                                <tree editable="bottom">
                                    <field name="member_name" string="Event Master"/>
                                    <field name="event_game"/>
                                    <field name="event_start_time" context="{'con' : parent.record_line_ids, 'event_start_time' : None, 'event_end_time' : event_end_time, 'event_duration' : event_duration, 'event_game_id' : event_game_id}"/>
                                    <field name="event_duration" context="{'con' : parent.record_line_ids, 'event_start_time' : event_start_time, 'event_end_time' : event_end_time, 'event_duration' : None, 'event_game_id' : event_game_id}"/>
                                    <field name="event_players" widget="many2many_tags"/>
                                    <field name="event_game_id"/>
                                    <field name="event_end_time"/>
                                    <field name="bill"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="member_name"/>
                                            <field name="event_game"/>
                                            <field name="event_start_time"/>
                                            <field name="event_duration" context="{'event_start_time' : event_start_time, 'event_end_time' : event_end_time, 'event_game_id' : event_game_id}"/>
                                            <field name="event_players" widget="many2many_tags"/>
                                            <field name="event_game_id"/>
                                            <field name="event_end_time"/>
                                            <field name="bill"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group>
                            <group>
                                
                                <group string="Payment Information">
                                    <field name="tournament_paid_amount"/>
                                    <field name="tournament_due_amount"/>
                                </group>
                                <group>
                                </group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <group>
                            </group>
                            <group>
                                <field name="subtotal"/>
                                <field name="discount"/>
                                <field name="participation_discount"/>
                                <field name="tax"/>
                                <field name="bill"/>
                            </group>
                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


