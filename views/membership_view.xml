<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_indoor_membership_tree" model="ir.ui.view">
        <field name="name">indoor.membership.tree</field>
        <field name="model">indoor.membership</field>
        <field name="arch" type="xml">
            <tree decoration-success="partner_type == '100' " 
                    decoration-muted="partner_type == '200' " 
                    decoration-danger="partner_type == '300' ">
                <field name="member_name"/>
                <field name="partner_type"/>
                <field name="membership_fees"/>
                <field name="membership_duration"/>
                <field name="membership_end_time"/>
            </tree>
        </field>
    </record>

    <record id="view_indoor_membership_form" model="ir.ui.view">
        <field name="name">indoor.membership.form</field>
        <field name="model">indoor.membership</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_make_payment" string="Make Payment" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div name="button_box" position="inside">
                        <button name="button_smart_paid" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <!-- <span >transactions</span> -->
                            <field name="membership_transaction_cnt"  widget="statinfo" string="transactions"/>
                            <!-- <span >Paid</span>
                            <field name="tournament_paid_amount"/> -->
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="member_name" placeholder="member"/>
                            <field name="partner_type"/>
                            <!-- <field name="game_ids" widget="many2many_tags"/> -->
                            <!-- <field name="partner_type_member_update"/> -->
                        </group>
                        <group>
                            <field name="membership_duration"/>
                            <field name="membership_end_time"/>
                            <field name="membership_status"/>
                        </group>
                        <group>
                            <field name="membership_fees"/>
                            <field name="membership_paid_amount"/>
                        </group>
                    </group>
                    <!-- <notebook>
                        <page name="Most Discount Games on that Partner type">
                        </page>
                    </notebook> -->
                </sheet>
            </form>
        </field>
    </record>


