<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="action_report_bista_purchase_order" model="ir.actions.report">
        <field name="name">Indoor Quotation</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">indoor.report_bista_purchase_order</field>
        <field name="report_file">indoor.report_bista_purchase_order</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_bista_purchase_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!-- Start -->
                        <div class="row text-center bg-dark">
                            <h1 t-esc="doc.name" class="bg-info"/>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="col-8">
                                    <div class="col-12" style="display:flex;">
                                        <div class="col-4">
                                            Customer
                                        </div>
                                        <div class="col-8">
                                            : <span t-esc="doc.partner_id.name" class="bg-dark text-warning"/>
                                        </div>
                                    </div>
                                    <div class="col-12" style="display:flex;">
                                        <div class="col-4">
                                            Vendor Reference
                                        </div>
                                        <div class="col-8">
                                            : <span t-esc="doc.partner_ref"/>
                                        </div>
                                    </div>
                                    <div class="col-12" style="display:flex;">
                                        <div class="col-4">
                                            Currency
                                        </div>
                                        <div class="col-8">
                                            : <span t-esc="doc.currency_id.name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                </div>

                            </div>
                        </div>

                        <table class="table table-sm mt-12">
                            <tr class="text-center table-primary">
                                <th>Product Name</th>
                                <th>Product Quantity</th>
                            </tr>
                            <t t-set="total_qty" t-value="0"/>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr class="text-center">
                                    <td t-esc="line.product_id.name"/>
                                    <td t-esc="line.product_qty" class="text-end"/>
                                </tr>
                                <t t-set="total_qty" t-value="total_qty + line.product_qty"/>
                            </t>
                            <tr class="text-center table-warning">
                                <td><strong>Total</strong></td>
                                <td t-esc="total_qty" class="text-end"/>
                            </tr>
                        </table>

                    <!-- End -->
                </t>
            </t>
        </t>
    </template>

